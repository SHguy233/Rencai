<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/entry_item_view"
        android:text="entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/symbol3"
        android:layout_toRightOf="@+id/entry_item_view"
        android:text=" - "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/leave_item_view"
        android:text="leave"
        android:layout_toRightOf="@id/symbol3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:text="Company"
        android:layout_below="@+id/entry_item_view"
        android:id="@+id/company_item_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/company_item_view"
        android:text="trade"
        android:id="@+id/trade_item_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/company_item_view"
        android:id="@+id/symbol4"
        android:text=" | "
        android:layout_toRightOf="@+id/trade_item_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_toRightOf="@+id/symbol4"
        android:layout_below="@+id/company_item_view"
        android:text="position"
        android:id="@+id/position_item_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:ellipsize="end"
        android:id="@+id/desc_item_view"
        android:text="desc"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_alignParentRight="true"
        android:id="@+id/id_no_work_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
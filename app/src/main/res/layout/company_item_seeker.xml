<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:visibility="invisible"
        android:id="@+id/id_no_company_companylv"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/img_company_c"
        android:src="@drawable/company_img"
        android:layout_width="30dp"
        android:layout_height="30dp" />
   <TextView
       android:textColor="#000000"
       android:text=""
       android:gravity="center_vertical"
       android:layout_toRightOf="@+id/img_company_c"
       android:ellipsize="end"
       android:singleLine="true"
       android:layout_marginTop="10dp"
       android:textSize="20dp"
       android:id="@+id/company_item_seeker_company"
       android:layout_width="200dp"
       android:layout_height="30dp" />

    
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/company_item_seeker_trade"
        android:id="@+id/trade_view"
        android:src="@drawable/trade_img"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <TextView
        android:textColor="#000000"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:id="@+id/company_item_seeker_trade"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginLeft="10dp"
        android:id="@+id/img_nature"
        android:src="@drawable/nature_img"
        android:layout_below="@id/company_item_seeker_company"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    <TextView
        android:textColor="#000000"
        android:id="@+id/company_item_seeker_nature"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:layout_below="@id/company_item_seeker_company"
        android:layout_toRightOf="@+id/img_nature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/img_scale"
        android:layout_toRightOf="@+id/company_item_seeker_nature"
        android:layout_below="@id/company_item_seeker_company"
        android:src="@drawable/scale_img"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    <TextView
        android:textColor="#000000"
        android:id="@+id/company_item_seeker_scale"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:layout_below="@id/company_item_seeker_company"
        android:layout_toRightOf="@+id/img_scale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:textColor="#000000"
        android:id="@+id/img_gps"
        android:layout_toRightOf="@+id/company_item_seeker_scale"
        android:layout_below="@id/company_item_seeker_company"
        android:src="@drawable/gps"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    <TextView
        android:textColor="#000000"
        android:id="@+id/company_item_seeker_address"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:layout_below="@id/company_item_seeker_company"
        android:layout_toRightOf="@+id/img_gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginLeft="10dp"
        android:id="@+id/img_desc"
        android:layout_below="@id/img_gps"
        android:src="@drawable/num_pic"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    <TextView
        android:textColor="#000000"
        android:id="@+id/company_item_seeker_desc"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:layout_below="@id/img_gps"
        android:layout_toRightOf="@+id/img_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <ImageView
        android:id="@+id/square5"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="#66ccff"
        android:layout_width="90dp"
        android:layout_height="25dp" />
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/square5"
        android:layout_alignLeft="@+id/square5"
        android:id="@+id/job_intention_bgd"
        android:background="@drawable/job_intention_pic"
        android:layout_width="80dp"
        android:layout_height="18dp" />
    <ImageView
        android:id="@+id/splitline5"
        android:layout_below="@+id/square5"
        android:background="#66ccff"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <TextView
        android:id="@+id/workplace_text_pre"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/splitline5"
        android:text="工作地点："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/salary_text_pre"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/workplace_text_pre"
        android:text="期望薪资："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/positioncategory_text_pre"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/salary_text_pre"
        android:text="职位类别："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tradecategory_text_pre"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/positioncategory_text_pre"
        android:text="行业类别："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="160dp"
        android:id="@+id/workplace_view_pre"
        android:layout_below="@+id/splitline5"
        android:text="城市"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/salary_view_pre"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/workplace_view_pre"
        android:text="薪资"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/positioncategory_view_pre"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/salary_view_pre"
        android:text="职位"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tradecategory_view_pre"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/positioncategory_view_pre"
        android:text="行业"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
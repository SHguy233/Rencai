<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <ImageView
        android:id="@+id/square6"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="#66ccff"
        android:layout_width="90dp"
        android:layout_height="25dp" />
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/square6"
        android:layout_alignLeft="@+id/square6"
        android:id="@+id/person_info_bgd"
        android:background="@drawable/company_info"
        android:layout_width="80dp"
        android:layout_height="18dp" />
    <ImageView
        android:id="@+id/splitline2"
        android:layout_below="@+id/square6"
        android:background="#66ccff"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <TextView
        android:id="@+id/company_name_ci_view"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/splitline2"
        android:text="公司名称："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/trade_ci_view"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/company_name_ci_view"
        android:text="行业："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/company_category_ci_view"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/trade_ci_view"
        android:text="性质："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/scale_ci_view"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/company_category_ci_view"
        android:text="规模："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
    android:id="@+id/business_desc_ci_view"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_below="@+id/scale_ci_view"
    android:text="业务介绍："
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/company_adress_ci_view"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/business_desc_ci_view"
        android:text="公司地址："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="160dp"
        android:id="@+id/company_name_ci_text"
        android:layout_below="@+id/splitline2"
        android:text="公司"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/trade_ci_text"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/company_name_ci_text"
        android:text="行业"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/company_category_ci_text"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/trade_ci_text"
        android:text="性质"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/scale_ci_text"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/company_category_ci_text"
        android:text="规模"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/business_desc_ci_text"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/scale_ci_text"
        android:text="业务"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/company_address_ci_text"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/business_desc_ci_text"
        android:text="地址"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
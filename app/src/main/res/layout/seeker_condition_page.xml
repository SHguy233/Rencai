                android:textOn="是"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/condition_computer_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/search_page_selector">

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/condition_computer_view"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:text="计算机水平："
                android:textSize="20dp" />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/condition_computer_view"
                android:layout_centerVertical="true"
                android:textSize="20dp"
                android:id="@+id/condition_computer_desc"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

            <Switch
                android:layout_marginRight="10dp"
                android:id="@+id/computer_switch"
                android:textOff="否"
                android:textOn="是"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/condition_workexp_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"

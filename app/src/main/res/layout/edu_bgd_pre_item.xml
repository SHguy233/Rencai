<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <ImageView
        android:id="@+id/square2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="#66ccff"
        android:layout_width="90dp"
        android:layout_height="25dp" />
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/square2"
        android:layout_alignLeft="@+id/square2"
        android:id="@+id/person_info_bgd"
        android:background="@drawable/edu_bgd_bgd"
        android:layout_width="80dp"
        android:layout_height="18dp" />
    <ImageView
        android:id="@+id/splitline2"
        android:layout_below="@+id/square2"
        android:background="#66ccff"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <TextView
        android:id="@+id/college_text_pre"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/splitline2"
        android:text="学校名称："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/major_text_pre"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/college_text_pre"
        android:text="专业名称："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/degree_text_view"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/major_text_pre"
        android:text="学历/学位："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/enroll_text_view"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/degree_text_view"
        android:text="入学时间："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/graduate_text_pre"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/enroll_text_view"
        android:text="毕业时间："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="160dp"
        android:id="@+id/college_view_pre"
        android:layout_below="@+id/splitline2"
        android:text="学校"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/major_view_pre"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/college_view_pre"
        android:text="专业"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/degree_view_pre"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/major_view_pre"
        android:text="学历"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/enroll_view_pre"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/degree_view_pre"
        android:text="入学"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/graduate_view_pre"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/enroll_view_pre"
        android:text="毕业"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
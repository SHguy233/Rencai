<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/admin_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#23B7F5">
        <Button
            android:id="@+id/back_button_company_info_admin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/back" />
        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/company_info"
            />
    </RelativeLayout>


    <TextView
        android:layout_below="@+id/admin_title_layout"
        android:id="@+id/admin_company_text"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textSize="25sp"
        android:textStyle="bold" />
    <TextView
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/admin_company_text"
        android:text="行业："
        android:id="@+id/trade_interview_fra_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/trade_interview_fra_admin"
        android:textSize="20dp"
        android:layout_below="@+id/admin_company_text"
        android:id="@+id/admin_trade_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/trade_interview_fra_admin"
        android:text="性质："
        android:id="@+id/nature_interview_fra_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/nature_interview_fra_admin"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/trade_interview_fra_admin"
        android:id="@+id/admin_nature_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/nature_interview_fra_admin"
        android:text="规模："
        android:id="@+id/scale_interview_fra_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/scale_interview_fra_admin"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/nature_interview_fra_admin"
        android:id="@+id/admin_scale_text_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/scale_interview_fra_admin"
        android:text="地址："
        android:id="@+id/address_interview_fra_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_toRightOf="@+id/address_interview_fra_admin"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/scale_interview_fra_admin"
        android:id="@+id/admin_address_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/address_interview_fra_admin"
        android:text="公司介绍："
        android:id="@+id/company_desc_interview_fra_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/company_desc_interview_fra_admin"
        android:id="@+id/admin_company_desc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <Button
            android:layout_below="@id/admin_company_desc_text"
            android:id="@+id/pass_commit_btn"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="通过审核"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/searchbtn"/>







</RelativeLayout>

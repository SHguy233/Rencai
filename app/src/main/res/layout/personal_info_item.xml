<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/name_item_view"
        android:text="name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_below="@+id/name_item_view"
        android:layout_toLeftOf="@+id/symbol5"
        android:id="@+id/gender_item_view"
        android:text="gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/symbol5"
        android:layout_below="@+id/name_item_view"
        android:layout_toLeftOf="@+id/workexp_item_view"
        android:text=" | "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/workexp_item_view"
        android:text="exp"
        android:layout_below="@+id/name_item_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/symbol6"
        android:layout_below="@+id/name_item_view"
        android:layout_toRightOf="@+id/workexp_item_view"
        android:text=" | "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/phone_item_view"
        android:layout_below="@+id/name_item_view"
        android:layout_toRightOf="@+id/symbol6"
        android:text="phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
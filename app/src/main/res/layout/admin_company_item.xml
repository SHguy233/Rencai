<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp" >



    <ImageView
        android:src="@drawable/name_img"
        android:id="@+id/admin_username_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toRightOf="@+id/admin_username_img"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:id="@+id/admin_username_view"
        android:text="username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginLeft="180dp"
        android:src="@drawable/company_img"
        android:id="@+id/admin_company_img"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/admin_company_view"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:textSize="25dp"
        android:text="company"
        android:layout_toRightOf="@+id/admin_company_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:visibility="invisible"
        android:id="@+id/id_no_admin_company"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/img_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/name_img"/>
   <TextView
       android:textColor="#000000"
       android:layout_toRightOf="@+id/img_name"
       android:layout_marginTop="10dp"
       android:textSize="26dp"
       android:text="姓名"
       android:id="@+id/resume_item_name"
       android:layout_width="200dp"
       android:layout_height="wrap_content" />
    
    <ImageView
        android:id="@+id/img_birth"
        android:layout_below="@id/img_name"
        android:src="@drawable/birth_img"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    <TextView
        android:textColor="#000000"
        android:id="@+id/resume_item_birth"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:layout_below="@id/img_name"
        android:layout_toRightOf="@+id/img_birth"
        android:text="生日"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_toRightOf="@id/resume_item_birth"
        android:id="@+id/img_gender"
        android:layout_below="@id/img_name"
        android:src="@drawable/gender_img"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    <TextView
        android:textColor="#000000"
        android:id="@+id/resume_item_gender"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:layout_below="@id/img_name"
        android:layout_toRightOf="@+id/img_gender"
        android:text="性别"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/img_workexp"
        android:layout_toRightOf="@+id/resume_item_gender"
        android:layout_below="@id/img_name"
        android:src="@drawable/workexp_pic"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    <TextView
        android:textColor="#000000"
        android:id="@+id/resume_item_workexp"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:layout_below="@id/img_name"
        android:layout_toRightOf="@+id/img_workexp"
        android:text="经验"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:visibility="invisible"
        android:id="@+id/resume_item_username"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
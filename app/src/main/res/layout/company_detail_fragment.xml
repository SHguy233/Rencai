<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/company_ci_fra"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="25sp"
        android:textStyle="bold" />
    <TextView
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/company_ci_fra"
        android:text="行业："
        android:id="@+id/trade_view_fra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/trade_view_fra"
        android:textSize="20dp"
        android:layout_below="@+id/company_ci_fra"
        android:id="@+id/trade_text_fra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/trade_view_fra"
        android:text="性质："
        android:id="@+id/nature_view_fra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/nature_view_fra"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/trade_view_fra"
        android:id="@+id/nature_text_fra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/nature_view_fra"
        android:text="规模："
        android:id="@+id/scale_view_fra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/scale_view_fra"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/nature_view_fra"
        android:id="@+id/scale_text_fra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/scale_view_fra"
        android:text="地址："
        android:id="@+id/address_view_fra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_toRightOf="@+id/address_view_fra"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/scale_view_fra"
        android:id="@+id/address_text_fra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/address_view_fra"
        android:text="公司介绍："
        android:id="@+id/company_desc_view_fra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/company_desc_view_fra"
        android:id="@+id/company_desc_text_fra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:id="@+id/company_assess"
        android:layout_below="@+id/company_desc_text_fra"
        android:text="公司口碑:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RatingBar
        android:id="@+id/ratingbar_company"
        android:isIndicator="true"
        android:max="100"
        android:numStars="5"
        android:layout_below="@+id/company_assess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_alignParentRight="true"
        android:id="@+id/id_no_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/follow_btn"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:text="关注公司"
        android:background="#23B7F5"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

</RelativeLayout>
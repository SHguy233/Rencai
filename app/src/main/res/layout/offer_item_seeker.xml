<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/img_position"
        android:src="@drawable/position_img"
        android:layout_width="30dp"
        android:layout_height="30dp" />
   <TextView
       android:textColor="#000000"
       android:gravity="center_vertical"
       android:layout_toRightOf="@+id/img_position"
       android:ellipsize="end"
       android:singleLine="true"
       android:layout_marginTop="10dp"
       android:textSize="20dp"
       android:id="@+id/offer_item_position"
       android:layout_width="200dp"
       android:layout_height="30dp" />

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/offer_item_salary"
        android:src="@drawable/img_salary"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <TextView
        android:gravity="center_vertical"
        android:text="1"
        android:layout_marginTop="10dp"
        android:id="@+id/offer_item_salary"
        android:textSize="20dp"
        android:textColor="#ff0099"
        android:layout_alignParentRight="true"
        android:layout_width="80dp"
        android:layout_height="30dp" />

    <ImageView
        android:id="@+id/img_company"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/offer_item_position"
        android:src="@drawable/company_img"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <TextView
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_toRightOf="@+id/img_company"
        android:textSize="20dp"
        android:layout_below="@+id/offer_item_position"
        android:id="@+id/offer_item_company"
        android:layout_width="200dp"
        android:layout_height="30dp" />
    
    <ImageView
        android:id="@+id/gps_view"
        android:layout_toRightOf="@id/offer_item_company"
        android:layout_below="@id/offer_item_position"
        android:src="@drawable/gps"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <TextView
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:id="@+id/offer_item_city"
        android:textSize="20dp"
        android:layout_below="@id/offer_item_position"
        android:layout_toRightOf="@+id/gps_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#000000"
        android:visibility="invisible"
        android:id="@+id/id_no_positionid2"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#000000"
        android:visibility="invisible"
        android:id="@+id/id_no_offerid"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
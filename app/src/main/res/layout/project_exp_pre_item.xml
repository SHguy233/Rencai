<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <ImageView
        android:id="@+id/square4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="#66ccff"
        android:layout_width="90dp"
        android:layout_height="25dp" />
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/square4"
        android:layout_alignLeft="@+id/square4"
        android:id="@+id/person_info_bgd"
        android:background="@drawable/project_exp_pic"
        android:layout_width="80dp"
        android:layout_height="18dp" />
    <ImageView
        android:id="@+id/splitline4"
        android:layout_below="@+id/square4"
        android:background="#66ccff"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <TextView
        android:textColor="#000000"
        android:id="@+id/project_text_pre"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/splitline4"
        android:text="项目名称："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:textColor="#000000"
        android:id="@+id/start_text_pre"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/project_text_pre"
        android:text="开始时间："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#000000"
        android:id="@+id/finish_text_pre"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/start_text_pre"
        android:text="结束时间："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#000000"
        android:id="@+id/project_desc_text_pre"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/finish_text_pre"
        android:text="项目描述："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="160dp"
        android:id="@+id/project_view_pre"
        android:layout_below="@+id/splitline4"
        android:text="项目"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:textColor="#000000"
        android:id="@+id/start_view_pre"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/project_view_pre"
        android:text="开始"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#000000"
        android:id="@+id/finish_view_pre"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/start_view_pre"
        android:text="结束"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#000000"
        android:id="@+id/project_desc_view_pre"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/finish_view_pre"
        android:text="描述"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>